[Unit]
Description=TouchScreen Local Server
After=network.target avahi-daemon.service

[Service]
Type=simple
User=root
WorkingDirectory=/opt/touchscreen/server
Environment=DEVICE_CONFIG=/opt/touchscreen/config.json
Environment=NODE_ENV=production
ExecStart=/usr/bin/node src/index.js
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
